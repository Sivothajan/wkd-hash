{
  "name": "wkd-hash",
  "version": "0.2.0",
  "description": "A library to generate WKD hashes for email addresses, used in PGP key discovery",
  "author": {
    "name": "Sivothayan",
    "email": "hi@sivothayan.com",
    "url": "https://sivothayan.com"
  },
  "license": "MIT",
  "keywords": [
    "wkd",
    "hash",
    "email",
    "username",
    "pgp"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sivothajan/wkd-hash.git"
  },
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "format": "prettier --write .",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --fix"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "auto"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jiti": "^2.6.1",
    "prettier": "^3.8.1",
    "tsup": "^8.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  }
}
